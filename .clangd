CompileFlags:
  CompilationDatabase: build/
  Add:
    - -std=c99
    - -Wstrict-prototypes
    - -Wconversion  # can be noisy

Diagnostics:
  ClangTidy:
    Add:
      - bugprone-*
      - cert-*
      - clang-analyzer-*
      - performance-*
      - portability-*
      - readability-*
    Remove:
      # Too noisy
      - readability-magic-numbers
      - readability-identifier-length
      - readability-function-cognitive-complexity
      - bugprone-easily-swappable-parameters
      # Too strict for most C code
      - cert-err33-c                    # Forces checking all returns
      - readability-identifier-naming   # Enforces naming conventions
